(mod
    (input)

    (defun len (i list)
        (if list
            (len (+ i 1) (r list))
            i
        )
    )
    (if input
        (len 0 input)
        (list
            (len 0 0)
            (len 0 (list "a"))
            (len 0 (list "a" "b" "c"))
            (len 0 (list 1 2 (list 3)))
        )
    )
)
